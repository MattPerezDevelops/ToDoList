@inherits LayoutComponentBase
<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<PageTitle>ToDoList</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>

    @*GitHub Icon*@
    <MudAppBar Color="Color.Inherit" Fixed="false" Dense="true">
    <MudLink Href="https://github.com/MattPerezDevelops"><MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Default" /></MudLink>
    @*Dark/Light Mode Switcher*@
    <MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>
    <MudToggleIconButton @bind-Toggled="@_isDarkMode"
                     Icon="@Icons.Filled.NightlightRound" Color="Color.Default" Title="Switch To Light Theme" 
                     ToggledIcon="@Icons.Filled.WbSunny" ToggledColor="Color.Default" ToggledTitle="Switch To Dark Theme"/>


    @code{
    private MudTheme _theme = new();
    private bool _isDarkMode;
    }
    </MudAppBar>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
